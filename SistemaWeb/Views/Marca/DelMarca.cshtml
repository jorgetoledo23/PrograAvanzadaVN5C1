@model SistemaWeb.Models.Marca

@{
    ViewData["Title"] = "Eliminar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Esta accion NO se puede deshacer. Confirma que estas seguro de Eliminar esta marca del sistema</h3>
<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la Marca
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
    </dl>
    
    <form asp-action="DelMarca">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger col-12" btn-outline-secondary col-12" btn-danger" /> |
        <a asp-action="Index">Volver al Listado</a>
    </form>
</div>
