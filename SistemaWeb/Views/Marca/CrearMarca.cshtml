@model SistemaWeb.Models.Marca

@{
    ViewData["Title"] = "Crear Nueva Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Nueva Marca</h1>
<hr />
<div class="row">
    <div class="col-xl-4">
        <form asp-action="CrearMarca" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3 mb-3">
                <input asp-for="Name" class="form-control" placeholder="Nombre de la Marca" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
              <input class="form-control" asp-for="ImagenFile" multiple="multiple">
              <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Agregar" class="btn btn-outline-danger col-12" btn-outline-secondary col-12" btn-outline-primary col-12" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="MarcaIndex">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
