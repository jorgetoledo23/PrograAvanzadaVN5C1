@model IEnumerable<SistemaWeb.Models.Linea>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Administracion de Lineas</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-circle-plus me-2"></i>Crear Nueva Linea</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square me-2 text-dark"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info me-2 text-dark"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash me-2 text-dark"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
