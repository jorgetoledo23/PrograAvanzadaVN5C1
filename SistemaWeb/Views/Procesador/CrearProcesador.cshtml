@model SistemaWeb.Models.Procesador

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Nuevo Procesador</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearProcesador">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Procesador"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="Gen" class="form-control" placeholder="Generacion" />
                <span asp-validation-for="Gen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Marca" class="form-control" placeholder="Marca" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear Procesador" class="btn btn-outline-danger col-12" btn-outline-secondary col-12" btn-success col-12" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ProcesadorIndex">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
