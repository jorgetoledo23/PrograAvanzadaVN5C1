@model SistemaWeb.Models.Equipo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nav bg-success bg-gradient p-3">Crear Nuevo Equipo</div>
<hr />
<div class="row">
    <form class="row justify-content-evenly" asp-action="Create" method="post">
        <div class="col-md-4">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ram" class="control-label"></label>
                <input asp-for="Ram" class="form-control" />
                <span asp-validation-for="Ram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disco" class="control-label"></label>
                <input asp-for="Disco" class="form-control" />
                <span asp-validation-for="Disco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NSerie" class="control-label"></label>
                <input asp-for="NSerie" class="form-control" />
                <span asp-validation-for="NSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NModel" class="control-label"></label>
                <input asp-for="NModel" class="form-control" />
                <span asp-validation-for="NModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accesorios" class="control-label"></label>
                <input asp-for="Accesorios" class="form-control" />
                <span asp-validation-for="Accesorios" class="text-danger"></span>
            </div>
            
    </div>
    <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FechaAdquisicion" class="control-label"></label>
                <input asp-for="FechaAdquisicion" type="date" class="form-control" />
                <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Garantia" class="control-label"></label>
                <input asp-for="Garantia" type="date" class="form-control" />
                <span asp-validation-for="Garantia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Marca</label>
                <select asp-for="MarcaId" class ="form-select" asp-items="ViewBag.Marca"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Clase</label>
                <select asp-for="ClaseId" class ="form-select" asp-items="ViewBag.Clase"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Procesador</label>
                <select asp-for="ProcesadorId" class ="form-select" asp-items="ViewBag.Procesador"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Linea</label>
                <select asp-for="LineaId" class ="form-select" asp-items="ViewBag.Linea"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear Equipo" class="btn btn-outline-danger col-12" btn-outline-secondary col-12" btn-outline-secondary col-12" />
            </div>
        
    </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
